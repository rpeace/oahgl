<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Name</th>
      <th>Lname</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_id %></td>
        <td><%= item.name %></td>
        <td><%= item.lname %></td>
        <td><%= link_to 'Show', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
