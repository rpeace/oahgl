<h1>Listing performances</h1>

<table>
  <tr>
    <th><%= sortable "level" %></th>
    <th><%= sortable "kills" %></th>
    <th><%= sortable "deaths", "Released" %></th>
  </tr>
  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td><%= performance.level %></td>
        <td><%= performance.kills %></td>
        <td><%= performance.deaths %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Performance</th>
      <th>Level</th>
      <th>Kills</th>
      <th>Deaths</th>
      <th>Assists</th>
      <th>Last hits</th>
      <th>Denies</th>
      <th>Gpm</th>
      <th>Xpm</th>
      <th>Hero damage</th>
      <th>Tower damage</th>
      <th>Hero healing</th>
      <th colspan></th>
    </tr>
  </thead>

  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td><%= performance.level %></td>
        <td><%= performance.kills %></td>
        <td><%= performance.deaths %></td>
        <td><%= performance.assists %></td>
        <td><%= performance.last_hits %></td>
        <td><%= performance.denies %></td>
        <td><%= performance.gpm %></td>
        <td><%= performance.xpm %></td>
        <td><%= performance.hero_damage %></td>
        <td><%= performance.tower_damage %></td>
        <td><%= performance.hero_healing %></td>
        <td><%= link_to 'Show', performance %></td>
      </tr>
    <% end %>
  </tbody>
</table>

