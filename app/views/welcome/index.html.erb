<h1>TI4 data!!!</h1>

<p>
	<strong>Most picked heros:</strong><br />
	<% Hero.all_by_picks[0..9].each do |hero| %>
		<%= hero.lname %>
		<%= Match.num_picked(hero.hero_id) %><br />
	<% end %>
</p>

<p>
	<strong>Most banned heros:</strong><br />
	<% Hero.all_by_bans[0..9].each do |hero| %>
		<%= hero.lname %>
		<%= Match.num_banned(hero.hero_id) %><br />
	<% end %>
</p>

<p>
	<strong>Most successful heros:</strong><br />
	<% Hero.all_by_winrate[0..9].each do |hero| %>
		<%= hero.lname %>
		<%= number_with_precision(Match.win_percentage(hero.hero_id), :precision=>2) %>%<br />
	<% end %>
</p>

<%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_noborder.png"), '/auth/steam' %>

<h1>WHO U R</h1>
<% if session.key? :current_user %>
<h3>Current user:</h3>
<%= image_tag session[:current_user][:image] %>
<p><%= session[:current_user][:nickname] %></p>
<p><%= session[:current_user][:uid] %></p>
<% end %>