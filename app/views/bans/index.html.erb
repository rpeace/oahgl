<h1>Listing bans</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Match</th>
      <th>Hero</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bans.each do |ban| %>
      <tr>
        <td><%= ban.order %></td>
        <td><%= ban.match_id %></td>
        <td><%= ban.hero_id %></td>
        <td><%= ban.team_id %></td>
        <td><%= link_to 'Show', ban %></td>
        <td><%= link_to 'Edit', edit_ban_path(ban) %></td>
        <td><%= link_to 'Destroy', ban, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ban', new_ban_path %>
