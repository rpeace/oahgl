<table>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to image_tag(user.logo), current_user.steam_profile %></td>
        <td><%= user.name %></td>
        <td><%= user_steam_state(user) %></td>
        <% if logged_in_as_user(user) %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

